<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/favorite_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/favorite_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="written by xx"
            android:textSize="20dp"
            android:layout_alignBaseline="@id/favorite_item_title"
            android:layout_toEndOf="@id/favorite_item_title"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/favorite_item_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="data"
            android:textStyle="italic"
            android:textSize="20dp"
            android:layout_below="@id/favorite_item_title"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>